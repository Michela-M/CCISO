{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:base"],
    "lockFileMaintenance": { "enabled": true },
    "allowedPostUpgradeCommands": ["npm install"],
    "packageRules": [
        {
            "matchPackagePatterns": ["*"],
            "postUpgradeTasks": {
                "commands": ["npm install"],
                "fileFilters": ["package-lock.json"]
            }
        }
    ]
}
